{
    "extends": "@tsconfig/node16/tsconfig.json",
    "include": [
      "./src/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ],
    "compilerOptions": {
      "typeRoots": [
        "./types",
        "node_modules/@types"
      ],
      "moduleResolution": "node",
      "outDir": "./dist",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true
    }
  }